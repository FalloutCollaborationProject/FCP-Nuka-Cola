<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Nuka-Cola Fridge __________-->

    <ThingDef ParentName="BuildingBase">
        <defName>FCP_Nuka_Fridge</defName>
        <label>nuka-cola fridge</label>
        <description>A specialized cold fermentation cabinet used by Nuka-Cola bottling teams to create the Ice Cold variant. Works like a fermenting barrel but maintains cooler temperatures for a crisper product.</description>
        <thingClass>Building_FermentingBarrel</thingClass>
        <drawerType>MapMeshAndRealTime</drawerType>
        <graphicData>
            <texPath>Things/Building/Production/FermentingBarrel</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
        </graphicData>
        <minifiedDef>MinifiedThing</minifiedDef>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.45</fillPercent>
        <pathCost>42</pathCost>
        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
        <statBases>
            <WorkToBuild>800</WorkToBuild>
            <Mass>12</Mass>
            <MaxHitPoints>120</MaxHitPoints>
            <Flammability>1.0</Flammability>
        </statBases>
        <costList>
            <Steel>12</Steel>
            <WoodLog>20</WoodLog>
        </costList>
        <comps>
            <li Class="CompProperties_TemperatureRuinable">
                <minSafeTemperature>-15</minSafeTemperature>
                <maxSafeTemperature>20</maxSafeTemperature>
                <progressPerDegreePerTick>0.00001</progressPerDegreePerTick>
            </li>
        </comps>
        <tickerType>Rare</tickerType>
        <rotatable>true</rotatable>
        <designationCategory>Production</designationCategory>
        <uiOrder>2715</uiOrder>
        <constructionSkillPrerequisite>2</constructionSkillPrerequisite>
        <constructEffect>ConstructMetal</constructEffect>
        <building>
            <buildingTags>
                <li>Production</li>
            </buildingTags>
            <destroySound>BuildingDestroyed_Metal_Small</destroySound>
        </building>
        <researchPrerequisites>
            <li>Brewing</li>
        </researchPrerequisites>
    </ThingDef>

</Defs>
