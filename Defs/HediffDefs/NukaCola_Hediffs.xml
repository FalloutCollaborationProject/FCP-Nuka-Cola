<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ ChemicalDef __________-->

    <!-- Chemical Def -->

    <ChemicalDef>
        <defName>NukaCola</defName>
        <label>nuka-cola</label>
        <addictionHediff>NukaCola_Addiction</addictionHediff>
        <toleranceHediff>NukaCola_Tolerance</toleranceHediff>
        <onGeneratedAddictedToleranceChance>0.8</onGeneratedAddictedToleranceChance>
    </ChemicalDef>

    <!--__________ Hediff __________-->

    <!-- Standard Nuka-Cola High -->

    <HediffDef>
        <defName>NukaCola_High</defName>
        <label>nuka-cola buzz</label>
        <labelNoun>a nuka-cola buzz</labelNoun>
        <description>Energized by Nuka-Cola's proprietary blend of stimulants. Movement and work speed increased.</description>
        <hediffClass>Hediff_High</hediffClass>
        <defaultLabelColor>(1,0.3,0.3)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-1.5</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
        </comps>
        <stages>
            <li>
                <minSeverity>0</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.10</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.05</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

