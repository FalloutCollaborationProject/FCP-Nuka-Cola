    <!-- Nuka-Dark High -->

    <HediffDef>
        <defName>NukaCola_Dark_High</defName>
        <label>dark rum buzz</label>
        <labelNoun>a dark rum buzz</labelNoun>
        <description>The mixed effects of stimulants and alcohol from Nuka-Dark. Confidence boosted but coordination slightly impaired.</description>
        <hediffClass>Hediff_High</hediffClass>
        <defaultLabelColor>(0.6,0.3,0.1)</defaultLabelColor>
