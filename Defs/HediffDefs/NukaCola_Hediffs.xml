    <!-- Nukashine High -->

    <HediffDef>
        <defName>Nukashine_High</defName>
        <label>nukashine stupor</label>
        <labelNoun>a nukashine stupor</labelNoun>
        <description>Extremely intoxicated from Nukashine. Everything feels amazing but cognitive function is severely impaired. May cause blackouts.</description>
        <hediffClass>Hediff_High</hediffClass>
        <defaultLabelColor>(1,0.9,0.5)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-2.5</severityPerDay>
                <showHoursToRecover>true</showHoursToRecover>
            </li>
        </comps>
        <stages>
            <li>
                <minSeverity>0</minSeverity>
                <label>tipsy</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.95</setMax>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.25</minSeverity>
                <label>drunk</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.80</setMax>
                    </li>
                </capMods>
                <statOffsets>
                    <SocialImpact>0.20</SocialImpact>
                </statOffsets>
            </li>
            <li>
                <minSeverity>0.50</minSeverity>
                <label>hammered</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.60</setMax>
                    </li>
                </capMods>
                <vomitMtbDays>0.2</vomitMtbDays>
            </li>
            <li>
                <minSeverity>0.75</minSeverity>
                <label>blackout drunk</label>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.30</setMax>
                    </li>
                </capMods>
                <vomitMtbDays>0.1</vomitMtbDays>
                <partEfficiencyOffset>-0.5</partEfficiencyOffset>
            </li>
        </stages>
    </HediffDef>

    <!-- Nuka-Cola Tolerance -->

    <HediffDef ParentName="DrugToleranceBase">
        <defName>NukaCola_Tolerance</defName>
        <label>nuka-cola tolerance</label>
        <description>A built-up tolerance to Nuka-Cola products. The more severe this tolerance is, the more Nuka-Cola it takes to get the same effect.</description>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.015</severityPerDay>
            </li>
            <li Class="HediffCompProperties_DrugEffectFactor">
                <chemical>NukaCola</chemical>
            </li>
        </comps>
    </HediffDef>

    <!-- Nuka-Cola Addiction -->

    <HediffDef ParentName="AddictionBase">
        <defName>NukaCola_Addiction</defName>
        <label>nuka-cola addiction</label>
        <description>A chemical addiction to Nuka-Cola. Long-term presence of Nuka-Cola has caused neurological adaptations at the cellular level, so the brain can no longer function properly without the drug. Without regular doses of Nuka-Cola, withdrawal symptoms will begin.</description>
        <hediffClass>Hediff_Addiction</hediffClass>
        <causesNeed>Chemical_NukaCola</causesNeed>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.045</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
            </li>
            <li>
                <label>unaddicted</label>
                <minSeverity>0</minSeverity>
            </li>
        </stages>
    </HediffDef>

    <!-- Nuka-Cola Withdrawal -->

    <HediffDef ParentName="WithdrawalBase">
        <defName>NukaCola_Withdrawal</defName>
        <label>nuka-cola withdrawal</label>
        <description>Because of a Nuka-Cola addiction, this person's body has adapted to the drug's presence. Without regular doses, they suffer fatigue and sluggishness.</description>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-0.25</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <label>mild</label>
                <restFallFactor>1.3</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.10</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.10</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.50</minSeverity>
                <label>major</label>
                <restFallFactor>1.5</restFallFactor>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.20</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.20</offset>
                    </li>
                </capMods>
                <mentalStateGivers>
                    <li>
                        <mentalState>Binging_DrugExtreme</mentalState>
                        <mtbDays>15</mtbDays>
                    </li>
                </mentalStateGivers>
            </li>
        </stages>
    </HediffDef>

</Defs>