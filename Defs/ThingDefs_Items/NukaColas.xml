<Defs>

    <!--__________ Nuka-Cola __________-->

    <!--_____ Nuka-Cola Base _____-->

    <!-- Base Nuka Cola -->

    <ThingDef Name="NukaColaBase" Abstract="True">
        <thingClass>ThingWithComps</thingClass>
        <category>Item</category>
        <drawerType>MapMeshOnly</drawerType>
        <useHitPoints>true</useHitPoints>
        <healthAffectsPrice>false</healthAffectsPrice>
        <selectable>true</selectable>
        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <DeteriorationRate>0.5</DeteriorationRate>
            <Mass>0.3</Mass>
            <Flammability>0.2</Flammability>
            <Beauty>0</Beauty>
        </statBases>
        <altitudeLayer>Item</altitudeLayer>
        <stackLimit>75</stackLimit>
        <tickerType>Rare</tickerType>
        <socialPropernessMatters>true</socialPropernessMatters>
        <thingCategories>
            <li>Foods</li>
        </thingCategories>
        <ingestible>
            <foodType>Fluid, Processed</foodType>
            <baseIngestTicks>80</baseIngestTicks>
            <chairSearchRadius>25</chairSearchRadius>
            <nurseable>true</nurseable>
            <ingestSound>Ingest_Beer</ingestSound>
            <ingestHoldOffsetStanding>
                <northDefault>
                    <offset>(0.18,0,0)</offset>
                </northDefault>
            </ingestHoldOffsetStanding>
        </ingestible>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>14</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
    </ThingDef>

    <!-- Nuka Cola Classic -->

    <ThingDef ParentName="NukaColaBase">
        <defName>NukaCola_Classic</defName>
        <label>nuka-cola</label>
        <description>The standard Nuka-Cola that took the world by storm before the war. This sweet, carbonated beverage provides a quick energy boost and a small amount of joy. The distinctive rocket-shaped bottle is instantly recognizable.</description>
        <graphicData>
            <texPath>Things/Food/Nuka_Colas/Nuka_Cola_Classic/Nuka_Cola_Classic</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>12</MarketValue>
            <Nutrition>0.10</Nutrition>
        </statBases>
        <ingestible>
            <joy>0.12</joy>
            <joyKind>Chemical</joyKind>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>NukaCola_High</hediffDef>
                    <severity>0.40</severity>
                </li>
            </outcomeDoers>
        </ingestible>
        <comps>
            <li Class="CompProperties_Drug">
                <chemical>NukaCola</chemical>
            </li>
        </comps>
    </ThingDef>

